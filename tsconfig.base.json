{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shiro/app": ["packages/app/src"],
      "@shiro/core": ["packages/core/src"],
      "@shiro/router": ["packages/router/src"],
      "@shiro/utils": ["packages/utils/src"],
      "core": ["packages/core/src/index.ts"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
